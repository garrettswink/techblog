<main class="box">
    <article>
        <h1>{{title}}</h1>
        <p>Created by: {{user.username}} | Date: {{format_date createdAt}}</p>
        <p>{{content}}</p>
    </article>

    {{#if logged_in}}

    <div class="box">
        <form class="new-comment-form">
            <div class="box">
                <label for="comment" class="form-label">Add Comment:</label>
                <textarea class="form-control" 
                id="content-new-comment" 
                rows="3"
                placeholder="Add a comment..."></textarea>
                <button type="submit" class="button is-primary">Submit</button>
            </div>
        </form>

        {{/if}}


        <h2 class="title is-3">Comment History:</h2>

        {{#each comments}}
        <div class="box">
            <p>{{comment_text}}</p>
            <p>By {{user.username}} on {{format_date createdAt}}</p>
        </div>
        {{/each}}

    </div>