   <div class="box">
      
      <h2 class="title is-3">Create a Blog Post.</h2>

      <form class="new-post-form">
        <div class="box">
          <label for="title-new-post" class="form-label">Title:</label>
          <input
            type="text"
            class="form-control"
            id="title-new-post"
            placeholder="Enter a title"
          />
        </div>

        <div class="box">
          <label for="content-new-post" class="form-label">Content:</label>
          <textarea
            class="form-control"
            id="content-new-post"
            rows="5"
            placeholder="Enter content here"
          ></textarea>
        </div>
        
        <div class="box">
          <button type="submit" class="button is-primary">Create Post</button>
        </div>
      </form>
    </div>